html
    head
        title= 'Nautilus'
        link(rel='stylesheet', href='stylesheets/index.css')
    body
        div(class='title-bar')
            div(class='title-bar-text')
                h2= 'Nautilus'
        if user
            div(id='domain-container')
                form(id='domain-form', action='/shell', method='post')
                    label(for='client-select-box') Select a client domain to get started:
                    select(id='client-select-box', name='clientDomain', autofocus)
                        each domain in domains
                            option(value=domain) #{domain}
                    div(id='lower')
                        input(id='go-button', type='submit', value='Go')
        else
            div(id='login-container')
                form(id='login-form', action='/login', method='post')
                    label(for='username') Username:
                    input(type='text', name='username', id='username', autofocus)
                    label(for='password') Password:
                    input(type='password', name='password', id='password')
                    div(id='lower')
                        input(type='submit', value='Login', id='login')