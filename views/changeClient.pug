html
    head
        title= 'Nautilus'
        script(src="https://code.jquery.com/jquery-3.2.1.min.js", integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=", crossorigin="anonymous")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
        link(rel='stylesheet', href='/stylesheets/custom.css')
        link(rel='stylesheet', href='/stylesheets/toggles.css')
        link(rel='stylesheet', href='/stylesheets/themes/toggles-modern.css')
        script(src='/scripts/toggles.min.js')
        meta(name="viewport", content="width=device-width, initial-scale=1")
    body
        nav(class="navbar navbar-default navbar-fixed-top navbar-inverse")
            div(class="container-fluid")
                div(class="navbar-header")
                    button(type="button", class="navbar-toggle collapsed",
                    data-toggle="collapse", data-target="#nautilus-navbar-collapse",
                    aria-expanded="false")
                        span(class="sr-only") Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand", href='/')
                div(class="collapse navbar-collapse" id="nautilus-navbar-collapse")
                    ul(class="nav navbar-nav")
                        li
                            a(href="/") Shell
                        li(class="active")
                            a(href="/admin") Admin
                            span(class="sr-only") (current)
                    ul(class="nav nav-center")
                        li
                            img(class='navbar-center-img', src='/img/white-qv-logo.png')
                    if user
                        ul(class="nav navbar-nav navbar-right")
                            li(class="dropdown")
                                a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button")= 'Logged in: ' + user.username
                                span(class="caret")
                                ul(class="dropdown-menu")
                                    li
                                        a(href="/changePassword") Change Password
                                    li(role="separator" class="divider")
                                    li
                                        a(href="/logout") Logout
    if !selected
        div(class='container main')
            div(class="col-md-6 col-md-offset-3")
                div(class="well")
                    form(id='db-form', action='/admin/clients/change', method='post')
                        h4 Edit Client
                        div(class="form-group")
                            label(for='client-select-box') Select a client to change:
                            select(class="form-control input-lg", id='client-select-box', name='clientToChange', tabindex='1', autofocus)
                                each client in clients
                                    option(value=client) #{client}
                        a(role='button', type="button", class="btn btn-default btn-lg", href="/admin", tabindex='3') Back
                        span(class="pull-right")
                            button(class="btn btn-primary btn-lg", type='submit', tabindex='2' id='selectClientBtn') Select Client
    if selected && !posted
        div(class='container main')
            div(class="col-md-6 col-md-offset-3")
                div(class="well")
                    form(id='db-form', action='/admin/clients/change', method='post')
                        h4 Change name or domain
                        input(type='hidden', id='changeClient', name='changeClient', value=changeClient._id)
                        div(class="form-group")
                            label(for='newClientName') Client Name:
                            input(class="form-control input-lg", type='text', name='newClientName', id='newClientName', tabindex='1', autofocus, value=changeClient.name)
                        div(class="form-group")
                            label(for='newClientDomain') Client Domain:
                            input(class="form-control input-lg", type='text', name='newClientDomain', id='newClientDomain', tabindex='2', value=changeClient.domain)
                        a(role='button', type="button", class="btn btn-default btn-lg", href="/admin", tabindex='4') Back
                        span(class="pull-right")
                            button(class="btn btn-primary btn-lg", type='submit', tabindex='3') Change Client

    if finished
        div(class='container main')
            div(class="col-md-6 col-md-offset-3")
                div(class="well")
                    if ok
                        h4 Client changed successfully.
                        a(href="/admin/clients/change", class="btn btn-default btn-lg", type='button', role="button", tabindex='1') Return
                    else
                        h4 Something went wrong.
                        div
                            code= message
                        a(href="/admin/clients/change", class="btn btn-default btn-lg", type='button', role="button", tabindex='1') Return